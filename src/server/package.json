{
  "name": "henry-diagnostics-server",
  "version": "1.0.0",
  "description": "Backend API for Henry Diagnostics",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc --noCheck",
    "start": "echo 'START: Initializing Prisma...' && rm -rf node_modules/.prisma && npx prisma db push --accept-data-loss --schema=../../prisma/schema.prisma && npx prisma generate --schema=../../prisma/schema.prisma && echo 'START: Prisma ready, starting server...' && node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "lint": "eslint src --ext .ts --fix",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "postinstall": "echo 'POSTINSTALL: Starting...' && rm -rf node_modules/.prisma && echo 'POSTINSTALL: Removed .prisma cache' && npx prisma db push --accept-data-loss && echo 'POSTINSTALL: DB push completed' && npx prisma generate && echo 'POSTINSTALL: Generate completed' && node scripts/safe-seed.js && echo 'POSTINSTALL: All done'",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma",
    "seed": "tsx ../../prisma/seed.ts"
  }
}
